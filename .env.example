# Trading System Environment Variables
# Copy this file to .env and fill in your actual values

# ===== API Keys =====

# 키움증권 API
KIWOOM_APP_KEY=your_kiwoom_app_key_here
KIWOOM_APP_SECRET=your_kiwoom_secret_here
KIWOOM_ACCOUNT_NUMBER=your_account_number_here

# NH투자증권 API (미국 주식)
NH_API_KEY=your_nh_api_key_here
NH_API_SECRET=your_nh_secret_here
NH_ACCOUNT_NUMBER=your_account_number_here

# Upbit API (암호화폐)
UPBIT_ACCESS_KEY=your_upbit_access_key_here
UPBIT_SECRET_KEY=your_upbit_secret_key_here

# Market Data APIs
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here
YAHOO_FINANCE_API_KEY=optional_yahoo_key_here

# ===== Database =====
DATABASE_URL=sqlite:///./data/trading.db

# ===== Logging =====
LOG_LEVEL=INFO
LOG_FILE_PATH=./logs/trading.log

# ===== Trading Parameters =====
PAPER_TRADING=true
MAX_POSITION_SIZE=100000
RISK_PER_TRADE=0.02
MAX_DAILY_LOSS=0.05

# ===== Notifications =====
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# ===== Antigravity Configuration =====
OPENAI_API_KEY=your_openai_key_for_antigravity_here
